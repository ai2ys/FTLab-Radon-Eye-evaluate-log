{
    "version": "2.0.0",
    "inputs": [
        {
            "description": "Python version",
            "id": "pythonVersion",
            "type": "pickString",
            "options": [
                "3.7",
                "3.8",
                "3.9",
                "3.10",
                "3.11",
            ],
            "default": "3.9",
        },
        {
            "type": "promptString",
            "id": "targetPort",
            "description": "Target port",
            "default": "8888",
        },
    ],
    "tasks": [
        {
            "label": "docker build",
            "type": "shell",
            "command": "${workspaceFolder}/.devcontainer/docker_build_run.sh",
            "args": [
                "-b", "${input:pythonVersion}",
            ],
        },
        {
            "label": "docker run",
            "type": "shell",
            "command": "${workspaceFolder}/.devcontainer/docker_build_run.sh",
            "args": [
                "-r", "${input:pythonVersion}", "-p", "${input:targetPort}",
            ],
        },
    ]
}